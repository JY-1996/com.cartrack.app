<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cartrack.app">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cartrack">
        <activity
            android:name=".ui.detail.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/Theme.Cartrack.NoActionBar"></activity>
        <activity
            android:name=".ui.detail.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ui.detail.ItemListActivity"
            android:theme="@style/Theme.Cartrack.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cartrack.app.ui.detail.ItemListActivity" />
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/Theme.Cartrack.NoActionBar" />
        <activity
            android:name=".ui.detail.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ui.detail.ItemListActivity"
            android:theme="@style/Theme.Cartrack.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cartrack.app.ui.detail.ItemListActivity" />
        </activity>
        <activity android:name=".ui.register.RegisterActivity">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
    </application>

</manifest>